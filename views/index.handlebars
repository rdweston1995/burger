                {{this.id}}  {{this.burger_name}}
            </li>
            {{/if}} {{/each}} --}}
            {{#each burgers}} {{#if this.devoured}}
            <li>
                {{this.id}}. {{this.burger_name}}
            </li>
            {{/if}} {{/each}}
        </ul>
    </div>

    <div class='burgerList'>
        <h2>Our Menu of Burgers</h2>
        <ul>
            {{#each burgers}} {{#unless this.devoured}}
            <li>
                <form action'/{{this.id}}?_method=PUT'>
                    <button type='submit' class='burgerAvailable'>{{this.burger_name}}</button>
                </form>
            </li>
            {{/unless}}
            {{/each}} 
        </ul>
    </div>

    {{!-- <div class='burgerList'>
        <h2>Our Menu of Burgers</h2>
        <ul>
            {{#each burgers}} 
            <li>
                {{this.id}}. {{this.burger_name}}
                <form action='/{{this.id}}?_method=PUT' method="POST">
                    <input type='hidden' name='devoured' value='false'>
                    <button class='eatme btn btn-warning' type='submit'>EAT ME!</button>
                </form>
                <button class='eatme btn btn-warning' value={{this.id}} type='submit'>EAT ME!</button>
            </li>
            {{/each}}
        </ul>
    </div> --}}
